                            <RadioButton
                                android:id="@+id/rbOK_tubo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ok"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
