<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentoRegistro"
    android:background="@color/gris_claro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/txtIdCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="@string/ingrese_codigo"
                    android:background="@color/white"
                    android:textSize="@dimen/txt_registro"
                    android:textStyle="bold"
                    android:layout_margin="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="@string/ingrese_fecha"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/txt_registro"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />

                    <Button
                        android:id="@+id/btnFecha"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="@string/btn_fecha" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txtHora"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_margin="5dp"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="@string/ingrese_hora"
                        android:inputType="textPersonName"
                        android:textSize="@dimen/txt_registro"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        />

                    <Button
                        android:id="@+id/btnHora"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:text="@string/btn_hora" />

                </LinearLayout>

                <EditText
                    android:id="@+id/txtDoc"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="@string/documentacion_vehiculo"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/txt_registro"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/txtPatente"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="@string/ingrese_patente_vehicular"
                    android:inputType="textPersonName"
                    android:textSize="@dimen/txt_registro"
                    android:textStyle="bold"
                    />

