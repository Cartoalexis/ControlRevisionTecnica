                                android:layout_height="wrap_content"
                                android:text="@string/rechazado"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
                                android:textColor="@color/gris_oscuro"/>
                        </RadioGroup>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/txtLuces"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/luces"
                            android:textSize="@dimen/txt_registro"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/radio_group">
                            <RadioButton
                                android:id="@+id/rbOK_Luces"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ok"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
                                android:textColor="@color/gris_oscuro"/>
                            <RadioButton
                                android:id="@+id/rbR_Luces"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rechazado"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
                                android:textColor="@color/gris_oscuro"/>
                        </RadioGroup>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/txtPuertas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/puertas"
                            android:textSize="@dimen/txt_registro"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/radio_group">
                            <RadioButton
                                android:id="@+id/rbOK_Puertas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ok"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
                                android:textColor="@color/gris_oscuro"/>
                            <RadioButton
                                android:id="@+id/rbR_Puertas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/rechazado"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
                                android:textColor="@color/gris_oscuro"/>
                        </RadioGroup>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/txtVidrios"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/vidrios"
                            android:textSize="@dimen/txt_registro"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>
                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/radio_group">
                            <RadioButton
                                android:id="@+id/rbOK_Vidrios"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ok"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
