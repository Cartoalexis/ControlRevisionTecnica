                                android:layout_height="wrap_content"
                                android:text="@string/rechazado"
                                android:textSize="@dimen/rb_registro"
                                android:textStyle="bold"
                                android:textColor="@color/gris_oscuro"/>
                        </RadioGroup>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
